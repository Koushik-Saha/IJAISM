# Database
DATABASE_URL="postgresql://user:password@localhost:5432/ijaism_db"

# JWT & NextAuth
JWT_SECRET="your-super-secret-jwt-key"
JWT_EXPIRES_IN="1h"
NEXTAUTH_SECRET="your-nextauth-secret-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="IJAISM"
NODE_ENV="development"

# Production (Uncomment for Vercel deployment)
# NEXTAUTH_URL="https://your-domain.vercel.app"
# NEXT_PUBLIC_APP_URL="https://your-domain.vercel.app"

# Email Configuration
# Option 1: SMTP (Gmail, Outlook, etc.)
# For Gmail:
#   1. Go to Google Account settings
#   2. Enable 2-Factor Authentication
#   3. Generate an App Password (https://myaccount.google.com/apppasswords)
#   4. Use the App Password as SMTP_PASS
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"           # "true" for port 465, "false" for other ports
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM_NAME="IJAISM Platform"
SMTP_FROM_EMAIL="noreply@ijaism.com"

# Option 2: Resend API (alternative to SMTP)
# RESEND_API_KEY="re_your_resend_api_key_here"
# EMAIL_FROM="IJAISM <noreply@ijaism.org>"
# EMAIL_REPLY_TO="support@ijaism.org"

# AWS S3 for File Uploads (Optional)
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_REGION="us-east-1"
# AWS_BUCKET_NAME="ijaism-uploads"

# Stripe Payment Integration (REQUIRED for memberships)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret_here"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_publishable_key_here"

# Stripe Price IDs (create these in your Stripe Dashboard)
STRIPE_PRICE_BASIC="price_basic_id_from_stripe"
STRIPE_PRICE_PREMIUM="price_premium_id_from_stripe"
STRIPE_PRICE_INSTITUTIONAL="price_institutional_id_from_stripe"
